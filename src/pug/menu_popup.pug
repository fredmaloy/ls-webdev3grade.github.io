.popup#hamburger
    a.hamburger__menu-link(@click="popupActive")
        .hamburger__menu        
    .menu__popup(v-if="show")
        .menu__popup-container
            .menu__popup-navigation(@click="popupActive")
                +navigation('navigation-popup', [{"title": "Главная" , "section": "#section__hero"},
                                        {"title": "Обо мне" , "section": "#section__my-card"},
                                        {"title": "Навыки" , "section": "#section__skills"},
                                        {"title": "Работы" , "section": "#section__my-works"},
                                        {"title": "Отзывы" , "section": "#section__comments"},
                                        {"title": "Связаться" , "section": "#section__feedback"}], 0)            .menu__popup-socials
                ul.social__list
                    - var socials = ['insta', 'vk', 'github'];
                    each item in socials
                        li.socials__item
                            a(href="#").socials__link
                                +icon(`${item}`, 'socials__icon')
        a.menu__popup-close(href='#', @click="popupActive")
            +icon(`cross`, 'menu__popup-close__svg')