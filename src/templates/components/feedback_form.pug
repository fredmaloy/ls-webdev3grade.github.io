script(type="text/x-template")#form-container
    form.form(action="#")#form
        .form__row
            label.form__block(for="")
                .form__title Введите ваше имя
                input.form__input-elem.name-input(v-model="name", type="text", :class='{ "filled" : isNameValid }', required)#name
            label.form__block(for="")
                .form__title Введите ваш email
                input.form__input-elem.email-input(v-model="to", type="email", :class='{ "filled" : isEmailValid }', required)#to
        .form__row
            label.form__block(for="")
                .form__title Сообщение к письму
                textarea.form__input-elem.comment-textarea(v-model="comment", :class='{ "filled" : isMessageValid }', required)#comment
        .btn__send  
            button.button(type='submit', :class='{ "valid" : isFormValid }', @click='feedbackSend')
                .btn__text Отправить