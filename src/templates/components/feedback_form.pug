script(type="text/x-template")#form-container
    section.section.section__feedback#section__feedback(data-link="section__feedback")
        .container.feedback__container
            .section__feedback-headline
                h2.headline_second-level.feedback__headline Связаться со мной
            feedbackForm

script(type="text/x-template")#feedback-form
    form.form(action="#")
        .form__row
            label.form__block(for="")
                .form__title Введите ваше имя
                input.form__input-elem.name-input(
                    v-model="name", 
                    type="text", 
                    :class='{ "filled" : isNameValid, "error": nameerror }',  
                    required)
                feedbackError(v-if='nameerror', texterror="Введите имя")
            label.form__block(for="")
                .form__title Введите ваш email
                input.form__input-elem.email-input(v-model="to", 
                type="email", 
                :class='{ "filled" : isEmailValid, "error": emailerror }', 
                required)
                feedbackError(v-if='emailerror', texterror="Введите ваш электронный адрес")
        .form__row
            label.form__block(for="")
                .form__title Сообщение к письму
                textarea.form__input-elem.comment-textarea(
                    v-model="comment", 
                    :class='{ "filled" : isMessageValid, "error": commenterror }', 
                    required)
                feedbackError(v-if='commenterror', texterror="Введите сообщение")
        .btn__send  
            button.button(type='submit', :class='{ "valid" : isFormValid }', @click.prevent='feedbackSend')
                .btn__text Отправить

script(type="text/x-template")#feedback-input__error
    .feedback-input__error
        .feedback-input__error-title
            p.feedback-input__error-text {{texterror}}
